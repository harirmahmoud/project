generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  firstName    String
  lastName     String
  password     String?
  createdAt    DateTime       @default(now())
  phone       Int?
  Blogs        Blog[]         @relation("UserBlogs")
  Courses      Course[]       @relation("UserCourses")
}

model Course {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  photo       String   @db.Text
  link        String
  duration    String
  instructor  String?
  startedAt   DateTime 
  level       String
  Tags        Tag[]    @relation("CourseTags")
  Users       User[]   @relation("UserCourses")
   maxUsers   Int
  evaluation  Float?
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  content     String  
  createdAt   DateTime @default(now())
  author      String?
  category    String
  description String
  status      String
  image       String   @db.Text
  Users       User[]   @relation("UserBlogs")
  Tags        Tag[]    @relation("BlogTags")
 
}

model Notification {
  id        Int      @id @default(autoincrement())
  message   String?
  description String?
  fullName  String
  type      String
  email     String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
 
}

model Admin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}
model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
   Blogs        Blog[]         @relation("BlogTags")
  Courses      Course[]       @relation("CourseTags")
}
model UserNote {
  id        Int      @id @default(autoincrement())
  type      String
  note      String   @db.Text
  createdAt DateTime @default(now())

}
model Service {
  id          Int      @id @default(autoincrement())
  fullName    String
  email       String
  phone       String
  company    String
  type       String
  description String   @db.Text
  level      String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
}
